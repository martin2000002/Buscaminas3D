{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "Remove-Item -Force -Path obj\\*, bin\\*",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "assemble-all",
            "type": "shell",
            "command": "Get-ChildItem -Path src\\*.asm | ForEach-Object { ml /c /coff /Cp /Fo obj\\$($_.BaseName).obj $_.FullName }",
            "problemMatcher": [
                {
                    "owner": "masm",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(.*)\\((\\d+)\\):\\s+(error|warning)\\s+([A-Z]+\\d+):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "code": 4,
                        "message": 5
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "link",
            "type": "shell",
            "command": "link /OUT:bin\\Buscaminas3D.exe obj\\main.obj",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": ["assemble"]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "echo Building...",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": ["clean", "assemble", "link"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "bin\\Buscaminas3D.exe",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": ["build"]
        }
    ]
}